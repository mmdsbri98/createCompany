    <title>Document</title>
</head>
<body class="alert-dark">
    <center>
        <div class="alert alert-warning col-8" role="alert">
           <form method="POST" action="/Company/updateCompany/<%= company["_id"]%>">
            <input value="<%= company["_id"]%>" class="alert alert-secondary" name="_id" >
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon1">name</span>
                </div>
                <input value="<%=company['name'] %>" name="name" type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
              </div>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon1">number</span>
                </div>
                <input value="<%=company['number'] %>" name="number" type="number" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
              </div>
            
              
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon1">dateStablish</span>
                </div>
                <input value="<%=company['dateStablish'] %>" name="dateStablish" type="date" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
              </div>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon1">phone</span>
                </div>
                <input value="<%=company['phone'] %>" name="phone" type="number" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
              </div>
              <button type="submit" class="btn btn-success">save</button>
           </form>
          </div></center>
          <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
          <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
          <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script> 
</body>
</html>